{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "maxNodeModuleJsDepth": 4,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./demo/**/*.ts",
    "./demo/**/*.tsx"
  ]
}