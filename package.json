{
  "name": "dawn",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "setup": "rm -rf node_modules && yarn install && npm run build",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes && rimraf packages/*/lib",
    "prebuild": "npm run clean && npm run bootstrap",
    "build": "tsc --build ./tsconfig.json",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "execa": "^5.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  }
}
