{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build", "lib", "dist", "./typings/"]
}
